{
  "name": "activity-monitor",
  "version": "1.0.0",
  "description": "CPU activity monitor",
  "repository": "electron/simple-samples",
  "main": "app.js",
  "scripts": {
    "start": "electron app.js"
  },
  "license": "ISC",
  "devDependencies": {
    "electron": "^3.0.2",
    "electron-packager": "^17.1.1"
  },
  "build": {
    "npmRebuild": true,
    "asar": true,
    "asarUnpack": [
      "app/**",
      "node_modules/**",
      "package.json"
    ],
    "productName": "Blint Demo",
    "appId": "cerrussell.blint-demo",
    "files": [
      "app/*",
      "node_modules/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        "portable"
      ]
    }
  }
}
